<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_root_layout"
        android:layout_marginTop="10dp">

        <FrameLayout
            android:layout_centerInParent="false"
            android:background="@color/themeColor"
            android:layout_height="1dp"
            android:id="@+id/line_view_left"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/status_left"
            android:layout_marginRight="13dp">

        </FrameLayout>

        <FrameLayout
            android:layout_centerInParent="false"
            android:background="@color/themeColor"
            android:layout_height="1dp"
            android:id="@+id/line_view_right"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_alignLeft="@+id/status_right">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_right"
            android:layout_alignParentLeft="false"
            android:layout_toRightOf="@+id/state_title"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_r"
                android:id="@+id/right_arrow_3"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_r"
                android:id="@+id/right_arrow_2"
                android:layout_toRightOf="@+id/right_arrow_3"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_r"
                android:id="@+id/right_arrow_1"
                android:layout_toRightOf="@+id/right_arrow_2"
                android:layout_width="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_left"
            android:layout_toLeftOf="@+id/state_title"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_l"
                android:id="@+id/left_arrow_1"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_l"
                android:id="@+id/left_arrow_2"
                android:layout_toRightOf="@+id/left_arrow_1"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_l"
                android:id="@+id/left_arrow_3"
                android:layout_toRightOf="@+id/left_arrow_2"
                android:layout_width="20dp"/>
        </RelativeLayout>

        <TextView
            android:text="WAIT"
            android:layout_height="wrap_content"
            android:id="@+id/state_title"
            android:lines="1"
            android:textColor="@color/themeColor"
            android:ellipsize="end"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="120dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="normal|bold"/>

    </RelativeLayout>

</RelativeLayout>