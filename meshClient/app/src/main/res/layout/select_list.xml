<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gu_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_layout"
        android:layout_marginTop="10dp">

        <FrameLayout
            android:layout_centerInParent="false"
            android:background="@color/themeColor"
            android:layout_height="1dp"
            android:id="@+id/line_view_left"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/status_left"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp">

        </FrameLayout>

        <FrameLayout
            android:layout_centerInParent="false"
            android:background="@color/themeColor"
            android:layout_height="1dp"
            android:id="@+id/line_view_right"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/status_right"
            android:layout_marginLeft="13dp">

        </FrameLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_right"
            android:layout_alignParentLeft="false"
            android:layout_toRightOf="@+id/state_title"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_r"
                android:id="@+id/right_arrow_3"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_r"
                android:id="@+id/right_arrow_2"
                android:layout_toRightOf="@+id/right_arrow_3"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_r"
                android:id="@+id/right_arrow_1"
                android:layout_toRightOf="@+id/right_arrow_2"
                android:layout_width="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_left"
            android:layout_toLeftOf="@+id/state_title"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_l"
                android:id="@+id/left_arrow_1"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_l"
                android:id="@+id/left_arrow_2"
                android:layout_toRightOf="@+id/left_arrow_1"
                android:layout_width="20dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/gu_b_l"
                android:id="@+id/left_arrow_3"
                android:layout_toRightOf="@+id/left_arrow_2"
                android:layout_width="20dp"/>
        </RelativeLayout>

        <TextView
            android:text="SELECT"
            android:layout_height="wrap_content"
            android:id="@+id/state_title"
            android:lines="1"
            android:textColor="@color/themeColor"
            android:ellipsize="end"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <TextView
        android:text="上司選択"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub_title"
        android:textColor="@color/gray"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/status_layout"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/select_list"
        android:divider="@color/themeColor"
        android:dividerHeight="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sub_title"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>