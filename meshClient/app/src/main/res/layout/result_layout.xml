<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/back_color"
        android:background="@color/winColor">
    </FrameLayout>

    <ImageView
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gu_bg"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_infor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:text="@string/information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_infor_title"
            android:textColor="@color/winYellow"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"/>

        <TextView
            android:text="３名中１番目にボタンを押しました"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reuslt_description"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/result_infor_title"
            android:layout_marginTop="6dp"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:id="@+id/result_data"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reuslt_description"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:layout_width="180dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_1st">

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_1st"
                    android:textColor="@color/winYellow"
                    android:textSize="12dp"/>

                <TextView
                    android:text="山田 太郎"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_1st"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/text_1st"
                    android:layout_marginLeft="20dp"
                    android:textSize="12dp"/>

                <TextView
                    android:text="00:00:00"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_1st"
                    android:layout_toRightOf="@+id/name_1st"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:textAlignment="viewEnd"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_2nd"
                android:layout_below="@+id/layout_1st"
                android:layout_marginTop="9dp">

                <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_2nd"
                    android:textColor="@color/winYellow"
                    android:textSize="12dp"/>

                <TextView
                    android:text="ぐる ナビ子"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_2nd"
                    android:layout_toRightOf="@+id/text_2nd"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:textSize="12dp"/>

                <TextView
                    android:text="00:00:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_2nd"
                    android:layout_toRightOf="@+id/name_2nd"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:textAlignment="viewEnd"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_3rd"
                android:layout_below="@+id/layout_2nd"
                android:layout_marginTop="9dp">

                <TextView
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_3rd"
                    android:textColor="@color/winYellow"
                    android:textSize="12dp"/>

                <TextView
                    android:text="山田 花子"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_3rd"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/text_3rd"
                    android:textColor="@color/white"
                    android:textSize="12dp"/>

                <TextView
                    android:text="00:00:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_3rd"
                    android:layout_toRightOf="@+id/name_3rd"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:textAlignment="viewEnd"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_height="40dp"
        android:id="@+id/reselect"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_select"
        android:layout_width="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/sub_title"
        android:layout_above="@+id/result_infor"
        android:id="@+id/result_image_layout">

        <RelativeLayout
            android:layout_width="300dp"
            android:id="@+id/star_layout"
            android:layout_centerInParent="true"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/kira_s"
                android:id="@+id/star_s_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="94dp"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/kira_s"
                android:id="@+id/star_s_bottom_right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="50dp"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/kira_s"
                android:id="@+id/star_s_bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="11dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/kira_s"
                android:id="@+id/star_s_bottom_left"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="75dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/kira_m"
                android:id="@+id/star_s_left"
                android:layout_marginTop="153dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/kira_s"
                android:id="@+id/star_s_top_left"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="38dp"/>

            <ImageView
                android:layout_height="17dp"
                android:src="@drawable/kira_s"
                android:id="@+id/star_s_top"
                android:layout_marginLeft="168dp"
                android:layout_marginTop="19dp"
                android:layout_width="17dp"/>

            <ImageView
                android:layout_height="24dp"
                android:src="@drawable/kira_m"
                android:id="@+id/star_m_bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="141dp"
                android:layout_marginBottom="2dp"
                android:layout_width="24dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/kira_m"
                android:id="@+id/star_m_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/kira_l"
                android:id="@+id/star_l_right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="78dp"
                android:layout_marginRight="6dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/kira_l"
                android:id="@+id/star_l_left"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_height="35dp"
                android:src="@drawable/kira_l"
                android:id="@+id/star_l_top"
                android:layout_marginLeft="119dp"
                android:layout_width="35dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/main_layout">

            <ImageView
                android:id="@+id/main_image"
                android:src="@drawable/win"
                android:layout_height="141dp"
                android:layout_centerVertical="false"
                android:adjustViewBounds="true"
                android:layout_centerInParent="false"
                android:layout_width="240dp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:text="CONTINUE"
                android:layout_height="60dp"
                android:id="@+id/btn_continue"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/main_image"
                android:background="@drawable/round_corner_selector"
                android:layout_marginTop="13dp"
                android:textSize="18dp"
                android:layout_width="240dp"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alpha_down_layout"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/start_back_color"
            android:background="@color/black">

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView7"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gu_bg"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"/>


    </RelativeLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        layout="@layout/header_layout"
        android:id="@+id/status_layout"/>

    <TextView
        android:text="争奪戦結果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub_title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/status_layout"
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:layout_marginTop="-35dp"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/error_layout"
        android:id="@+id/error_root"
        android:visibility="gone"/>

</RelativeLayout>